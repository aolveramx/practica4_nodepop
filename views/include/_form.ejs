 <!-- form handling -->
 <form action="/api/ads" method="POST" id="newAd">
  <div class="newAd">
      <div class="form-group">
          <label for="article" class="text-light">Artículo</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="article" value="" placeholder="Xbos Series One">
      </div>
      <div class="form-group">
          <label for="operationType" class="text-light">Modalidad</label>
          <div class="radio inline">
              <input type="radio" id="radio-2" name="operationType" value="sell" >
              <label for="radio-2" class="radio-label">Vendo</label>
          </div>
          <div class="radio inline">
              <input type="radio" id="radio-3" name="operationType" value="wanted" >
              <label for="radio-3" class="radio-label">Busco</label>
          </div>
      </div>
      <div class="form-group">
          <label for="price" class="text-light">Precio</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="price" value="" placeholder="900">
      </div>
      <div class="form-group">
          <label for="image" class="text-light">Imagen</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="image" value="" placeholder="Url de imagen">
      </div>
      <div class="form-group">
          <label for="category" class="text-light">Categoría</label>
          <div class="radio inline">
              <input type="radio" id="radio-4" name="category" value="electronics" >
              <label for="radio-4" class="radio-label">electronics</label>
          </div>
          <div class="radio inline">
              <input type="radio" id="radio-5" name="category" value="clothes" >
              <label for="radio-5" class="radio-label">Ropa</label>
          </div>
          <div class="radio inline">
              <input type="radio" id="radio-6" name="category" value="mobility" >
              <label for="radio-6" class="radio-label">Mobilidad</label>
          </div>
          <div class="radio inline">
              <input type="radio" id="radio-7" name="category" value="musical" >
              <label for="radio-7" class="radio-label">Música</label>
          </div>
      </div>
      <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
      </div>

  </div>
</form>